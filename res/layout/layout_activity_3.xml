<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:theme="@android:style/Theme.Holo">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:id="@+id/urlPromptLinearLayout" android:layout_alignParentEnd="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/url_checker_prompt"
                android:id="@+id/urlPromptTextView" android:textSize="@dimen/header_size" android:singleLine="false"/>
    </LinearLayout>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_size"
            android:id="@+id/editUrl"
            android:background="@color/light_primary_color"
            android:layout_below="@+id/urlPromptLinearLayout" android:layout_alignParentStart="true"
            android:textColor="@color/primary_text_color" android:layout_margin="5dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/md5TextView"
            android:isScrollContainer="true" android:textIsSelectable="true" android:enabled="true"
            android:focusable="true" android:focusableInTouchMode="true" android:editable="false"
            android:layout_alignParentStart="true" android:layout_below="@+id/editUrl"
            />
</RelativeLayout>